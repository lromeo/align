<!doctype html>
<html lang="en">
    <head>
        <%- include('partials/head.ejs') %>
        <title>Align Scoliosis: Contact</title>
    </head>
    <body>
        <header>
            <%- include('partials/header.ejs') %>
        </header>

        <div class="container">
            <div class ="col">
                <p>
                    Give us a call or text at (201) 565-3970, or fill out the form below and we will get back to you:
                </p>
            </div>
            <div class="col">
                <form action="/contact" id="contact-form" method="post" role="form">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input id="name" class="form-control" name="name" type="text" placeholder="Enter your name" required/>
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input id="email" class="form-control" name="email" type="email" placeholder="Enter your email">
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone Number</label>
                        <input id="phone" class="form-control" name="phone" type="text" placeholder="Enter your phone number">
                    </div>

                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="3"></textarea>
                    </div>

                    <div class="form-group">
                        <!-- Add reCAPTCHA widget -->
                        <div class="g-recaptcha" data-sitekey="6LdDUsUqAAAAAOoHxFFe1xLIwj0695VQoE2rQho4"></div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <hr>
            <div class="col">
                <div id="map"></div>
                <script>
                    var map;
                    function initMap() {
                        var loc = {lat: 40.9408566, lng: -73.117492109};
                        map = new google.maps.Map(document.getElementById('map'), {
                            center: loc,
                            zoom: 15
                        });
                        var marker = new google.maps.Marker({position: loc, map: map});
                    }
                </script>
                <script src= <%- google_api %> async defer></script>
            </div>
        </div>
        <%- include('partials/footer.ejs') %>
    </body>
</html>

<script src="https://www.google.com/recaptcha/api.js" async defer></script>
